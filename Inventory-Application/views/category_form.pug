extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Category name:
      input#name.form-control(type='text', placeholder='Name of the category' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#summary.form-control(placeholder='Description' name='description' required value=(undefined===category ? '' : category.description) )
    div.form-group 
      label(for='password') Password: 
      input#password.form-control(type='password' placeholder='Enter Password' name='password' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li(style='color: red;')!= error.msg