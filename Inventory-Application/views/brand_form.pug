extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Brand name:
      input#name.form-control(type='text', placeholder='Name of the brand' name='name' required value=(undefined===brand ? '' : brand.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li(style='color: red;')!= error.msg